{
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": false }],
        "dot-location": ["error", "property"],
        "no-empty": 2,
        "no-extra-semi": 2, // disallow unnecessary semicolons
        "use-isnan": 2 // disallow comparisons with the value NaN
    },
    "env": {
        "es6": true
    }
}